    <link rel="stylesheet" href="addPhone.css" type="text/css" />
  </head>
  <body>
    <h2>Add New Phone</h2>
    <form action="/submit_phone" method="POST">
        <label for="brand">Brand:</label>
        <input type="text" id="brand" name="brand" required><br>

        <label for="model">Model:</label>
        <input type="text" id="model" name="model" required><br>

        <label for="colour">Colour:</label>
        <input type="text" id="colour" name="colour" required><br>

        <label for="storage">Storage GB:</label>
        <input type="text" id="storage" name="storage" required><br>

        <label for="price">Price:</label>
        <input type="number" id="price" name="price" step="any" required><br>        

        <label for="description">Description:</label><br>
        <textarea id="description" name="description" rows="4" cols="50" required></textarea><br>

        <label for="image">Image URL:</label>
        <input type="url" id="image" name="image" required><br>

        <input type="submit" value="Add Phone">
    </form>
  </body>
</html>